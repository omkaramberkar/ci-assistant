<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CIAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <!-- The color displayed most frequently across your appâ€™s screens and components.
        This color should pass accessibilty guidelines for text / iconography when drawn on top
        of the surface or background color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- A tonal variation of the primary color. -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top
        of the primary color. -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <!-- The secondary branding color for the app, usually an accented complement to the
        primary branding color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <!-- A tonal variation of the secondary color. -->
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <!-- A color that passes accessibility guidelines for text/iconography when drawn on top
        of the secondary color. -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryDark</item>

        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Widget.CIAssistant.Button</item>
    </style>

</resources>
